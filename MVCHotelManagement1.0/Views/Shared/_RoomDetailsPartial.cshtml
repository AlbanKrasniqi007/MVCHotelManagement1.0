@model IEnumerable<MVCHotelManagement1._0.ViewModel.RoomDetailsViewModel>


<head>
    @*Linku per ikona te bootstrap, (perdorimi: class="bi bi-trash")*@ 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>



<style>

    .custom-thead {
        background-color: #0D6EFD;
        color: white;
    }

    th {
        color: white;
    }

    table {
        border: 1px solid black;
    }
</style>

<table style="width: 100%;" class="table table-bordered, table table-striped"> 
    <thead class="custom-thead">
        <tr class="table-active">
            <th>
                Action
            </th>
            <th>
                Room Image
            </th>
            <th>
                Room No.
            </th>
            <th>
                Room Price
            </th>
            <th>
                Booking Status
            </th>
            <th>
                Room Type
            </th>
            <th>
                Room Capacity
            </th>
            <th>
                Room Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <span id="btnDelete" class="bi bi-trash" onclick="DeleteRoom(@item.RoomId)"></span> &nbsp;&nbsp;
                <span id="btnEdit" class="bi bi-pencil" onclick="EditRoom(@item.RoomId)"></span> &nbsp;&nbsp;

                <td>
                    <img src="@Url.Content("~/RoomImages/" + item.RoomImage)" width="30" height="30" class="img-responsive" alt="Alternate Text" />
                </td>
                <td>
                    @item.RoomNumber
                </td>
                <td>
                    @item.RoomPrice
                </td>
                <td>
                    @item.BookingStatus
                </td>
                <td>
                    @item.RoomType
                </td>
                <td>
                    @item.RoomCapacity
                </td>
                <td>
                    @item.RoomDescription
                </td>
            </tr>
        }
    </tbody>
</table>

@*Commit*@

